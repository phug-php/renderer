doctype html
html
    head
        meta(charset="utf-8")
        title=$title
        style: include:no-php ./prism.css
    body
        pre=$message
        pre.line-numbers(data-line=$line data-line-offset=$start - 1 data-highlight-offset=$offset data-start=$start)
            code.language-jade!=$code
        pre=$trace
        script: include:no-php ./prism.js
